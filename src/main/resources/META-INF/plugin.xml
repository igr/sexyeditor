<idea-plugin>
    <id>Sexy Editor</id>
    <name>Sexy Editor</name>
    <vendor email="sexyeditor@igo.rs" url="https://oblac.studio">Oblac</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.SexyEditorBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="appearance"
                instance="com.github.igr.sexyeditor.config.SexyEditorSettingsConfigurable"
                displayName="Sexy Editor"/>

        <applicationService serviceImplementation="com.github.igr.sexyeditor.config.SexyEditorState" />
        <editorFactoryListener implementation="com.github.igr.sexyeditor.listeners.SexyEditorListener"/>
    </extensions>

</idea-plugin>
